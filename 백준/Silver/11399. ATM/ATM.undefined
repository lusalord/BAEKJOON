#include <iostream>
#include <algorithm>
using namespace std;
int main() {
    int a;
    cin >> a;
    int* arr = new int[a];
    int cnt = 0;
    for(int i = 0; i < a; i++){
        int n;
        cin >> n;
        arr[i] =  n;
    }
    sort(arr, arr + a);
    for(int i = 0; i < a; i++){
        for(int j = 0; j < i + 1; j++){
            cnt += arr[j];
        }
    }
    cout << cnt;
}